<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.picovr.example"
    android:sharedUserId="android.uid.system">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.PowerManagerHelperActivity"
            android:label="PowerManagerHelperActivity">
            <intent-filter>
                <action android:name="example.action.PowerManagerHelper" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.WifiHelperActivity"
            android:label="WifiHelperActivity">
            <intent-filter>
                <action android:name="example.action.WifiHelper" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.BluetoothHelperActivity"
            android:label="BluetoothHelperActivity">
            <intent-filter>
                <action android:name="example.action.BluetoothHelper" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StorageHelperActivity"
            android:label="StorageHelperActivity">
            <intent-filter>
                <action android:name="example.action.StorageHelper" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DeviceHelperActivity"
            android:label="DeviceHelperActivity">
            <intent-filter>
                <action android:name="example.action.DeviceHelper" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AudioHelperActivity"
            android:label="AudioHelperActivity">
            <intent-filter>
                <action android:name="example.action.AudioHelper" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>